# Application Settings
APP_NAME=Skyflo.ai - Engine
APP_VERSION=0.1.0
APP_DESCRIPTION=Core engine for Skyflo.ai
DEBUG=false
API_V1_STR=/api/v1

# Server Settings
LOG_LEVEL=INFO

# Database Settings (using postgres:// for Tortoise ORM)
POSTGRES_DATABASE_URL=postgres://skyflo:skyflo@skyflo-ai-postgres:5432/skyflo

# Redis Settings
REDIS_URL=redis://skyflo-ai-redis:6379/0

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# JWT Settings
JWT_SECRET=your-jwt-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080 # 1 week
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7 # 1 week

# OpenAI Settings
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o
MANAGER_OPENAI_TEMPERATURE=0.7
OPENAI_PLANNER_TEMPERATURE=0.3
OPENAI_EXECUTOR_TEMPERATURE=0.0
OPENAI_VERIFIER_TEMPERATURE=0.2

# MCP Server Settings
MCP_SERVER_URL=http://skyflo-ai-mcp:8081

# Workflow Settings
WORKFLOW_EXECUTION_TIMEOUT=300